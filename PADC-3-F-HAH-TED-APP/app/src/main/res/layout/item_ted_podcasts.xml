<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/rl_ted_podcast"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_ted_podcast_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ted_image_video" />

        <FrameLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignBottom="@id/iv_ted_podcast_image"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ted_image" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_podcast_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_ted_podcast_image"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/ted_podcast_title"
            android:textColor="@color/black_full"
            android:textSize="16dp" />

        <FrameLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_podcast_title"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="8dp">

            <TextView
                android:id="@+id/tv_podcast_brief"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ted_podcast_brief"
                android:textColor="@color/secondary_text"
                android:textSize="12dp" />
        </FrameLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>