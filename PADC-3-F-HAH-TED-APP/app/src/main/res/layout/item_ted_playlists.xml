<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:fitsSystemWindows="true"
    android:layout_margin="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/rl_playlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_playlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ted_image" />

        <TextView
            android:id="@+id/tv_playlist_talk_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_playlist"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="8dp"
            android:shadowColor="@color/black_full"
            android:shadowDy="2"
            android:shadowDx="2"
            android:shadowRadius="2"
            android:text="5 talk"
            android:textColor="@color/secondary_text"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/tv_playlist_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_playlist"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/tv_playlist_talk_no"
            android:text="1:19:21"
            android:textSize="12dp"
            android:shadowColor="@color/black_full"
            android:shadowDy="2"
            android:shadowDx="2"
            android:shadowRadius="2"
            android:textColor="@color/secondary_text" />

        <FrameLayout
            android:id="@+id/fl_playlist_title"
            android:layout_above="@id/tv_playlist_talk_no"
            android:layout_width="100dp"
            android:layout_alignStart="@id/tv_playlist_talk_no"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/tv_playlist_titles"
                style="@style/white_text_black_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/playlist_title"
                android:textSize="16dp"/>
        </FrameLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>