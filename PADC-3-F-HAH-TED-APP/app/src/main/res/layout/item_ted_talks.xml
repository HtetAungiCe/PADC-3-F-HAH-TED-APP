<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_ted_talks"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/rl_talks"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_talks_background_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ted_education" />

        <TextView
            android:id="@+id/tv_talker_names"
            style="@style/white_text_black_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="@string/talker_names"
            android:layout_above="@id/fl_talk_title"
            android:textSize="12sp" />

        <FrameLayout
            android:id="@+id/fl_talk_title"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_talk_time"
            android:layout_alignStart="@+id/tv_talker_names">

            <TextView
                android:id="@+id/tv_talk_title"
                style="@style/white_text_black_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/talk_title"
                android:textSize="18sp" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_talk_time"
            style="@style/white_text_black_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_talks_background_img"
            android:layout_alignRight="@id/iv_talks_background_img"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="8dp"
            android:text="4:43"
            android:textSize="12sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>